generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repo {
  name        String    @id @unique
  forked_date DateTime?
  Commit      Commit[]
}

model Commit {
  id         String   @id
  created_on DateTime
  email      String
  repo_name  String
  branch     String
  Email      Email    @relation(fields: [email], references: [email])
  Repo       Repo     @relation(fields: [repo_name], references: [name])
}

model Email {
  email     String   @id
  github_id String
  Student   Student? @relation(fields: [github_id], references: [github_id])
  Commit    Commit[]
}

model Student {
  name       String  @id
  username   String  @unique
  github_id  String  @unique
  is_student Boolean
  Emails     Email[]
}

model Log {
  id         String   @id @default(uuid())
  created_on DateTime @default(now())
  error      String
}
