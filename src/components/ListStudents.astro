---
import StudentsSummaryRow from "./StudentsSummaryRow.astro";
const { studentSummary: data } = Astro.props

  ---

<table class="table-auto border-collapse border border-slate-500">
  <thead>
    <tr class="bg-slate-800">
      <th class="p-4"><a class="cursor-pointer" href={`/?sort=date`}  >Commit Date</a></th>
      <th class="p-4"><a href="/?sort=name">Student</a></th>
      <th class="p-4"><a href="/?sort=commits"># Commits</a></th>
      <th class="p-4">
        <p>
          <a href="/?sort=progress">Progress Score</a>
          <br />
          <span class="text-xs text-gray-500">
            (# commits / Std of commits)
          </span>
        </p>
      </th>
      <th class="p-4">Challenge/Repo</th>
    </tr>
  </thead>
  <StudentsSummaryRow data={data} />
</table>
